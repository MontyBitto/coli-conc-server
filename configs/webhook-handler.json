{
  "port": 2999,
  "verbosity": "all",
  "webhooks": [
    {
      "repository": "gbv/coli-conc-server",
      "command": "srv update self",
      "ref": "refs/heads/main",
      "event": "push"
    },
    {
      "repository": "gbv/github-webhook-handler",
      "command": "srv update webhook-handler",
      "event": "release",
      "action": "released"
    },
    {
      "repository": "gbv/jskos-server",
      "command": "srv update jskos-server-dev",
      "event": "workflow_run",
      "action": "completed",
      "filter": {
        "body.workflow_job.head_branch": "dev",
        "body.workflow_job.workflow_name": "Publish Docker"
      }
    }
  ]
}
